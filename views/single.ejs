<%- include("./partials/header.ejs")%> 
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

<div class="container pt-5 mt-5">
    <div class="card shadow-lg border rounded-4 p-5 bg-white text-dark">
        <div class="row g-4 align-items-center">
            <div class="col-md-7 order-md-2">
                <div class="card-body">
                    <h2 class="card-title fw-bold text-dark"><%= singleBlog.title %></h2>
                    <p class="text-dark">
                        By <strong class="text-dark"><%= singleBlog.username %></strong> |  
                        <%= new Date(singleBlog.createdAt).toLocaleString("en-US") %> 
                    </p>
                    <p class="card-text lead fw-semibold"><%= singleBlog.content %></p>
                    
                    <!-- Like Icon -->
                    <!-- Like & Dislike Buttons -->
<div class="d-flex align-items-center mt-3 gap-3">
  <form action="/like/<%= singleBlog._id %>" method="POST">
    <button type="submit" class="btn btn-outline-primary d-flex align-items-center">
      <i class="bi bi-hand-thumbs-up me-2"></i> <span><%= singleBlog.likes %></span>
    </button>
  </form>

  <form action="/dislike/<%= singleBlog._id %>" method="POST">
    <button type="submit" class="btn btn-outline-danger d-flex align-items-center">
      <i class="bi bi-hand-thumbs-down me-2"></i> <span><%= singleBlog.dislikes %></span>
    </button>
  </form>
</div>

                </div>
            </div>
            <div class="col-md-5 order-md-1">
                <img src="/<%= singleBlog.image %>" class="img-fluid rounded-3 shadow-sm" alt="Blog Image">
            </div>
        </div>
    </div>
</div>


